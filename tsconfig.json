{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES2017",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "types": ["node", "jest"],
      "lib": ["dom", "webworker"],
      "emitDeclarationOnly": true,
    },
    "include": ["src/**/*.ts", "example/src/index.js"],
  }
  